#-----------stage1: build the application----------
FROM maven:4.0.0-rc-5-eclipse-temurin-25-noble AS dark
##we will create and workdir
WORKDIR /app
#we will copy the pom.xml
COPY pom.xml .
RUN mvn dependency:go-offline
#we will copy the full src and build the application
COPY src ./src
RUN mvn clean package -DskipTests

#------stage2: run the application ---------
FROM eclipse-temurin:11-jre-ubi9-minimal
WORKDIR /app

###we need to get only the jar file from the dark stage
COPY --from=dark /app/target/*.jar app.jar
EXPOSE 8080
ENTRYPOINT ["java","-jar","app.jar"]

  193  docker build multiapp .
  194  docker build -t multiapp .
