#lets create our first pod copy line 3 till line 12
   35  vi pod.yml
apiVersion: v1
kind: Pod
metadata:
  name: nginx
spec:
  containers:
  - name: nginx
    image: nginx:1.14.2
    ports:
    - containerPort: 80
##save the file and apply it
   36  kubectl apply -f pod.yml
      ####this get will show the pod is running but wait for 30 second to come up
   37  kubectl get pod
      ######describe pod will show the event log
   38  kubectl describe pod nginx
##cpod manifest explanation
##to apply a manifest file in k8s
#@kubectl apply -f pod.yml
#any yaml file you are running it will run from top to bottom and left to right
apiVersion: v1 #pod api version is v1
kind: Pod #we are creat a pod
metadata: #metadata is the information about the pod
  name: nginx #thje name of the pod will be nginx
spec: #this is the specification of the pod
  containers: #this is the container section of the pod
  - name: nginx #this is the name of the container
    image: nginx:1.14.2 #image 
    ports:
    - containerPort: 80 #container port is 80
#############################lets do the dry run to deploy our workload in k8s
#kubectl run help will show how the pod is going to be created
  42  kubectl run --help
#replace the image with your own image
#the below command will generate the sekelton of your pod with image
   43  kubectl run my-first-pod --image=gopal1409/skywalker --port=8080 --dry-run=client -o yaml
#you can store the output in a file
   44  kubectl run my-first-pod --image=gopal1409/skywalker --port=8080 --dry-run=client -o yaml > sky.yml
   45  cat sky.yml
#apply it and check the pod come or not after 30 second
   46  kubectl apply -f sky.yml
   47  kubectl get pod
   48  kubectl describe pod my-first-pod
#if you want to see your pod is running on which node
kubectl get pod -o wide
##inside a pod we can run multiple containers
 59  vi multi.yml
apiVersion: v1
kind: Pod
metadata:
  creationTimestamp: null
  labels:
    run: my-multi-pod
  name: my-multi-pod
spec:
  containers:
  - image: gopal1409/skywalker
    name: my-first-pod
    ports:
    - containerPort: 8080
  - image: nginx:1.14.2
    name: nginx
    ports:
    - containerPort: 8080


   60  kubectl apply -f multi.yml
#check the pod which is now showing 2/2 means inside the pod we have two container running
##check that the pod is running on same worker node
kubectl get pod -o wide
